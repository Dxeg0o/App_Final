generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String
  tasks Task[]
}

model Task {
  id          Int       @id @default(autoincrement())
  title       String
  status      String
  startDate   DateTime  @default(now())
  endDate     DateTime?
  description String    @default("")
  dueDate     DateTime?
  categoryId  Int?
  category    Category? @relation(fields: [categoryId], references: [id])
}
